{
  "extends": "tslint:latest",
  "rules": {
    "align": [
      true,
      "arguments",
      "elements",
      "members",
      "parameters",
      "statements"
    ],
    "array-bracket-spacing": [
      true,
      "always"
    ],
    "arrow-return-shorthand": true,
    "await-promise": [
      true,
      "Bluebird",
      "QueryBuilder",
      "QueryBuilderSingle",
      "QueryBuilderOption",
      "QueryBuilderBase",
      "QueryBuilderPage",
      "QueryBuilderUpdate",
      "QueryBuilderDelete",
      "QueryBuilderInsert",
      "QueryBuilderInsertSingle"
    ],
    "ban": [
      true,
      [
        "window",
        {
          "name": "isNaN",
          "message": "You can use Number.isNan() instead of isNaN()"
        },
        [
          "describe",
          "only"
        ],
        [
          "it",
          "only"
        ]
      ]
    ],
    "binary-expression-operand-order": true,
    "block-spacing": [
      true,
      "always"
    ],
    "comment-format": [
      true,
      "check-uppercase",
      "check-space",
      {
        "ignore-words": [ "TODO" ]
      }
    ],
    "cyclomatic-complexity": [
      true,
      15
    ],
    "dot-notation": true,
    "ext-variable-name": [
      true,
      ["class",                       "pascal"],
      ["interface",                   "pascal"],
      ["parameter",   "camel",        "allow-leading-underscore"],
      ["property",    "public",       "camel"],
      ["property",    "private",      "camel",    "require-leading-underscore"],
      ["property",    "protected",    "camel",    "allow-leading-underscore"],
      ["function",                    "camel",    "allow-leading-underscore"],
      ["method",      "public",       "camel"],
      ["method",      "private",      "camel",    "require-leading-underscore"],
      ["method",      "protected",    "camel",    "allow-leading-underscore"]
    ],
    "handle-callback-err": [
      true,
      "^(err|error|e)$"
    ],
    "import-blacklist": [
      true,
      "rxjs",
      "lodash"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-over-type-literal": true,
    "max-classes-per-file": false,
    "max-file-line-count": [
      true,
      600
    ],
    "max-line-length": [
      true,
      120
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "no-any": false,
    "no-bitwise": false,
    "no-constant-condition": true,
    "no-duplicate-case": true,
    "no-duplicate-imports": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-empty-character-class": true,
    "no-empty-interface": false,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-floating-promises": false,
    "no-for-in-array": true,
    "no-inferrable-types": false,
    "no-inner-declarations": true,
    "no-internal-module": true,
    "no-invalid-regexp": true,
    "no-invalid-template-strings": true,
    "no-irregular-whitespace": true,
    "no-regex-spaces": true,
    "no-magic-numbers": false,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": [
      true,
      "allow-declarations"
    ],
    "no-object-literal-type-assertion": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-submodule-imports": false,
    "no-switch-case-fall-through": true,
    "no-unbound-method": false,
    "no-unexpected-multiline": true,
    "no-unnecessary-initializer": true,
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "no-void-expression": [
      true,
      "ignore-arrow-function-shorthand"
    ],
    "number-literal-format": true,
    "object-curly-spacing": [
      true,
      "always"
    ],
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "prefer-function-over-method": [
      true,
      "allow-public"
    ],
    "prefer-literal": [
      true,
      "object",
      "function",
      "array"
    ],
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "promise-function-async": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "restrict-plus-operands": true,
    "strict-boolean-expressions": [
      true,
      "allow-boolean-or-undefined"
    ],
    "strict-type-predicates": false,
    "ter-func-call-spacing": [
      true,
      "never"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ]
  }
}
